<div class="text-success">
    <%= flash[:notice] %>
</div>
<div class="text-danger">
    <%= flash.now[:alert] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
