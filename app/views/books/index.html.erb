<h1>Books</h1>

<h4>Title</h4>
<h4>Body</h4>
 <span>
    <%= link_to book.title, books(book.id) %>
  </span>

<% @books.each do |book| %>
 
 <span><%= book.title %></span>
<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit '投稿' %>

<% end %>

